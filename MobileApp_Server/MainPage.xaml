<Page
    x:Class="MobileApp_Server.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MobileApp_Server"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:MobileApp_Server"
    mc:Ignorable="d"
    
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>       
            <Viewbox>
                <Grid Margin="0,0,0,200">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Background="#FFDADAEA">
                            <TextBlock Text="Server Active" Margin="0,5,0,0" ></TextBlock>
                            <ToggleSwitch x:Name="ServerButton" Margin="10,0,0,0" Toggled="ServerButton_Toggled"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                        <Grid Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="product_ID"/>
                            <TextBlock Grid.Column="1" Text="product_Name"/>
                            <TextBlock Grid.Column="2" Text="category"/>
                            <TextBlock Grid.Column="3" Text="price"/>
                            <TextBlock Grid.Column="4" Text="toggle"/>

                        </Grid>
                        <GridView ItemsSource="{x:Bind products}">
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="data:Products_Class">
                                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0" >
                                        <TextBlock Text="{x:Bind product_ID}" Width="200"/>
                                        <TextBlock Text="{x:Bind product_Name}" Width="200"/>
                                        <TextBlock Text="{x:Bind category}" Width="200"/>
                                        <TextBlock Text="{x:Bind price}" Width="200"/>
                                        <ToggleSwitch Width="200"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </StackPanel>
                    </StackPanel>

                </Grid>
            </Viewbox>

        </Grid>

    
</Page>
